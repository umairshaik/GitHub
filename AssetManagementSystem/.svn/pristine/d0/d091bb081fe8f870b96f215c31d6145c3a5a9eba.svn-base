<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/app_screen_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- login -->

    <TextView
        android:id="@+id/login_txv"
        style="@style/textview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login" />

    <EditText
        android:id="@+id/login_edt"
        style="@style/edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- password -->

    <TextView
        android:id="@+id/password_txv"
        style="@style/textview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password" />

    <EditText
        android:id="@+id/password_edt"
        style="@style/edittext_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- login and exit buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/login_btn"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/login" />

        <Button
            android:id="@+id/exit_btn"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_buttons_marigin_left"
            android:layout_weight="1"
            android:onClick="onExitButtonClicked"
            android:text="@string/exit" />
    </LinearLayout>

</LinearLayout>